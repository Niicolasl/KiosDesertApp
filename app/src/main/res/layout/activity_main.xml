<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false"
    android:background="@color/white">


   <ImageView
       android:id="@+id/imageView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       app:srcCompat="@drawable/wallpaper" />

   <TextView
       android:id="@+id/txtMenu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Menu"
       android:textColor="@color/white"
       android:textSize="60sp"
       android:paddingLeft="120sp"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="10dp"/>

   <TextView
       android:id="@+id/textServices"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:layout_margin="5dp"
       android:layout_marginStart="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginBottom="5dp"
       android:text="2. Servicios"
       android:textColor="@color/red"
       android:textSize="30sp" />

   <TextView
       android:id="@+id/txtNumberService"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/txtNumberProducts"
       android:layout_marginLeft="25dp"
       android:text="2"
       android:textColor="@color/red"
       android:textSize="30sp" />

   <TextView
       android:id="@+id/textProducts"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@id/textServices"
       android:layout_centerInParent="true"
       android:layout_marginStart="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginBottom="5dp"
       android:text="1. Productos"
       android:textColor="@color/blue"
       android:textSize="30sp" />

   <TextView
       android:id="@+id/txtNumberProducts"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:paddingLeft="160sp"
       android:text="1"
       android:textColor="@color/blue"
       android:textSize="30sp" />

   <TextView
       android:id="@+id/textBranch"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/textServices"
       android:layout_centerInParent="true"
       android:layout_margin="5dp"
       android:layout_marginStart="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginBottom="5dp"
       android:text="3. Sucursales"
       android:textColor="@color/green"
       android:textSize="30sp" />

   <TextView
       android:id="@+id/txtNumberBranch"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/txtNumberService"
       android:layout_marginLeft="30dp"
       android:text="3"
       android:textColor="@color/green"
       android:textSize="30sp" />




</RelativeLayout>