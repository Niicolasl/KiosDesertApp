<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios"
        android:textSize="60sp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/txtHomeDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtNequi"
        android:text="Servicio a domicilio"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtNequi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Pago por Nequi"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:paddingRight="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/txtComingSoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNequi"
        android:layout_centerHorizontal="true"
        android:text="Proximamente..."
        android:textColor="@color/black"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView_domicilio"
        android:layout_width="69dp"
        android:layout_height="63dp"
        android:layout_above="@id/txtNequi"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="25dp"
        android:layout_toLeftOf="@id/txtHomeDelivery"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/domicilio" />

    <ImageView
        android:id="@+id/imageView_nequi"
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:layout_above="@id/txtComingSoon"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="84dp"
        android:layout_toLeftOf="@id/txtNequi"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/nequi_logo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:layout_below="@id/txtNequi"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/txtComingSoon"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/megafono" />
</RelativeLayout>